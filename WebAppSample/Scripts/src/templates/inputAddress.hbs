<div class="row">
    <div class="form-group col-xs-3">
        <label for="street">Street name:</label>
        <input class="form-control" id="street" placeholder="Rua Augusta">
    </div>
    <div class="form-group col-xs-1">
        <label for="number">Number:</label>
        <input class="form-control" id="number" placeholder="1000">
    </div>
    <div class="form-group col-xs-1">
        <label for="state">State:</label>
        <input class="form-control" id="state" placeholder="SP">
    </div>
    <div class="form-group col-xs-2">
        <label for="city">City:</label>
        <input class="form-control" id="city" placeholder="São Paulo">
    </div>
    <div class="form-group col-xs-1">
        <label for="city">&nbsp;</label>
        <button type="submit" class="btn btn-default">Search</button>
    </div>
</div>
